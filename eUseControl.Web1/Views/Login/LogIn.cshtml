﻿
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_LayoutReg.cshtml";

}

@using System.Web.Optimization
@model eUseControl.Web1.Models.UserLogin

@using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @id = "LoginForm" }))
{
    @Html.AntiForgeryToken()
    <div class="login-form">
        <div class="sign-in-htm">

        </div>
        <div class="sign-up-htm">
            <div class="group">
                <label for="user" class="label">Никнейм</label>
                @Html.TextBoxFor(m => m.Credential,
                new { @style = "text-align:center;" })
            </div>
            <div class="group">
                <label for="pass" class="label">Пароль</label>
                @Html.TextBoxFor(m => m.Password, new
                {
                    @class = "password",
                    type = "password",
                    id = "pass"
                })
            </div>


            <div class="group">
                <input type="submit" class="button" value="Login">
            </div>
            <div class="hr"></div>

        </div>

    </div>
}