
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using System.Web.Optimization
@model eUseControl.Web1.Models.AdminProduct

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { @id = "ProductForm" }))
{
    @Html.AntiForgeryToken()
    
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <div class="col-md-7">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Новый товар</h3>
                        </div>
                        <div class="form-group">
                            <label for="user" class="label">Название</label>
                            @Html.TextBoxFor(m => m.Name,new { @placeholder = "Напишите Название", @style = "text-align:right" })
                        </div>
                        <div class="form-group">
                            <label for="user" class="label">Цена</label>
                            @Html.TextBoxFor(m => m.Price, new { @placeholder = "Напишите Цену", @style = "text-align:right" })
                        </div>
                        <div class="form-group">
                            <label for="user" class="label">Описание</label>
                            @Html.TextBoxFor(m => m.Description, new { @placeholder = "Напишите Описание", @style = "text-align:right" })
                        </div>
                        <div class="form-group">
                            <label for="user" class="label">ID</label>
                            @Html.TextBoxFor(m => m.Id, new { @placeholder = "Напишите Id", @style = "text-align:right" })
                        </div>
                        <input type="submit" class="button" value="Отправить">
                    </div>
                </div>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
    
    <!-- /SECTION -->
}
